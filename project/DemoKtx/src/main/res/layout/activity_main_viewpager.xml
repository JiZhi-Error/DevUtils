<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <androidx.viewpager2.widget.ViewPager2
        android:fadingEdge="none"
        android:id="@+id/vid_amvp_vp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/un_dp_100"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <!-- 底部选项 -->

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/vid_bottom"
        android:layout_gravity="bottom"
        android:layout_height="@dimen/un_dp_100"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:id="@+id/vid_amvp_tab1"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:text="1"
            android:textSize="@dimen/un_sp_40"
            android:textStyle="bold" />

        <TextView
            android:gravity="center"
            android:id="@+id/vid_amvp_tab2"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:text="2"
            android:textSize="@dimen/un_sp_40"
            android:textStyle="bold" />

        <TextView
            android:gravity="center"
            android:id="@+id/vid_amvp_tab3"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:text="3"
            android:textSize="@dimen/un_sp_40"
            android:textStyle="bold" />

        <TextView
            android:gravity="center"
            android:id="@+id/vid_amvp_tab4"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:text="4"
            android:textSize="@dimen/un_sp_40"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>